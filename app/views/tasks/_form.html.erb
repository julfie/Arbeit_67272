<%= simple_form_for @task, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Task</legend>

		<%= f.input :name, input_html: {class: "avg"} %>
		<%= f.input :due_on, label: "Due by", as: :string, input_html: {:class => "avg datepicker"} %>
		<%= f.input :project_id, collection: Project.current.alphabetical, include_blank: true, input_html: {class: "avg"} %>
		<%= f.input :priority, :collection => Task::PRIORITY_LIST, include_blank: true, input_html: {class: "avg"} %>
		<%= f.input :completed, input_html: {class: "left avg"} %>
    <p>&nbsp;</p>
    <div class="form-actions">
      <%= f.submit nil, class: 'button radius' %>
      <%= link_to 'Cancel', tasks_path, class: 'button radius alert' %>
    </div>
  </fieldset>
<% end %>
