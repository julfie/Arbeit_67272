<table class="table table-striped" id="tasks_status">
  <thead>
    <tr>
      <th>Done</th>
      <th>Name</th>
      <th>Due Date</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
    <% @project_tasks.each do |task| %>
      <tr>
        <% if task.status == 'Completed' %>
          <td class="centered"><%= link_to(image_tag("icons/check_green.gif"), ajax_incomplete_path(task), remote: true, method: 'patch', class: 'ajax_task') %></td>
        <% else %>
          <td class="centered"><%= link_to(image_tag("icons/check_black.gif"), ajax_complete_path(task), remote: true, method: 'patch', class: 'ajax_task') %></td>
        <% end %>
        <td><%= link_to task.name, task_path(task) %></td>
        <td><%= task.due_on.strftime("%m/%d/%y") %></td>
        <td><%= raw(task_label(task.status)) %></td>
        <!-- see note in _task_details for comments on raw() -->
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @project_tasks, previous_label: "Previous&nbsp;", next_label: "&nbsp;Next" %>